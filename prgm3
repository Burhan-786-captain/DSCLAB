(b) Tower of Hanoi Problem
#include <stdio.h>

// Recursive function for Tower of Hanoi
void towerOfHanoi(int n, char source, char temp, char dest) {
    if (n == 1) {
        printf("Move disk 1 from %c --> %c\n", source, dest);
        return;
    }

    towerOfHanoi(n - 1, source, dest, temp);
    printf("Move disk %d from %c --> %c\n", n, source, dest);
    towerOfHanoi(n - 1, temp, source, dest);
}

int main() {
    int n;

    printf("Enter the number of disks: ");
    scanf("%d", &n);

    printf("The sequence of moves involved in Tower of Hanoi are:\n");
    towerOfHanoi(n, 'A', 'B', 'C');

    return 0;
}
